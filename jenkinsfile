node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Update GIT') {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    withCredentials([usernamePassword(credentialsId: 'github', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        //def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
                        sh "git config user.email jenkins@me.com"
                        sh "git config user.name jenkins"
                        //sh "git switch master"
                        sh "cd Staging"
                        sh "cat 0-deployment.yaml"
                        sh "sed -i 's+m0dularm1nd/cicd-api.*+m0dularm1nd/cicd-api:${DOCKERTAG}+g' 0-deployment.yaml"
                        sh "cat 0-deployment.yaml"
                        sh "git add ."
                        sh "git commit -m 'Done by yours truly and Jenkins... changemanifest: ${env.BUILD_NUMBER}'"
                        sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/${GIT_USERNAME}/CICD-Manifest.git.git HEAD:main"
      }
    }
  }
}
}
